<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Soondong" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#007680</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#007680</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:actionMenuTextColor">#007680</item>



        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Main.Soondong" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#007680</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#007680</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/drawer_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="android:actionMenuTextColor">#007680</item>



        <!-- Customize your theme here. -->
    </style>


    <!-- Splash 화면 테마 -->
    <style name="Theme.MyApp.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/drawer_background</item>
        <item name="android:windowBackground">@color/drawer_background</item>
    </style>




    <style name="Theme.Soondong.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Soondong.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Soondong.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>



</resources>